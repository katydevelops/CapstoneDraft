@page "/post/{PostId:int}"
@using CapstoneDraft.Models;
@using CapstoneDraft.Services;
@inject PostService PostService
@inject NavigationManager NavigationManager

@* Load the post details with the purpose of the user being able to view all the information, post comments and any corresponding image that matches their serach term *@
@if (post != null)
{
    <div class="neon-bg-container">
        <div class="card">
            <div class="feed-post-header">
                <h6><strong>Name:</strong> @post.AuthorName</h6>
                <h6><strong>Post Subject:</strong> @post.PostSubject</h6>
                <h6><strong>Post Category:</strong> @post.PostCategory</h6>
        </div>
                <div class="social-media-card">
                <div>
                    <p class="view-post-subheading">Post Details:</p>
                    <p>@post.PostMessageBody</p>
                    @if (!string.IsNullOrWhiteSpace(post.PostPhoto))
                    {
                        <img src="@post.PostPhoto" alt="Post Image" />
                    }
                    <p><sub>Posted by <strong>@post.AuthorName</strong> on <strong>@post.PostCreatedTimestamp.ToShortDateString()</strong></sub></p>
                </div>
                @if (post.PostComments.Any())
                {
                    <div>
                        <p class="view-post-subheading">Comments: </p>
                        @foreach (var comment in post.PostComments)
                        {
                            <p>@comment.CommentText</p>
                            <p>
                                @if (comment.User != null)
                                {
                                    <sub>Commented by <strong>@comment.User.UserName</strong> - <strong>@comment.CommentCreatedTimestamp.ToShortDateString()</strong></sub>
                                }
                                else
                                {
                                    <sub>Author of Comment Unknown - Posted - @comment.CommentCreatedTimestamp.ToShortDateString() </sub>
                                }
                            </p>
                        }
                    </div>
                }
                </div>
            </div>
</div>
}


@code {
    [Parameter]
    public int PostId { get; set; } // PostId component parameter will allow the Search page to pass the id parameter to this View Post child component
    private PostModel post;

    protected override async Task OnInitializedAsync()
    {
        post = await PostService.FetchPostAsync(PostId); // At component intialization, load the post the matches the corresponding Id
    }
}
